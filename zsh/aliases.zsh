# Git
alias gs='git status'
alias gl='git log'
alias ga='git add'
alias gpush='git push'
alias gpull='git pull'
alias gb='git branch'
alias gc='git commit'
alias gco='git checkout'

# Neovim
alias vi="nvim"
alias vim="nvim"

# ls
alias ls='ls --color=auto'
alias l='ls -l'
alias la='ls -A'

# grep
alias grep="grep -P -i --color=auto"

# pacman
alias paci='sudo pacman -S'               # install
alias pacs='pacman -Ss'                   # search
alias pacu='sudo pacman -Syu'             # update
alias pacr='sudo pacman -Rnsu'            # remove package with unused dependencies

# yay
alias yayi='yay -S'       # install
alias yays='yay -Ss'      # search
alias yayu='yay -Syu'     # update
alias yayrr='yay -Rnsu'   # remove package with unused dependencies

# dnf
alias dnfi='sudo dnf install'
alias dnfs='dnf search'
alias dnfu='sudo dnf upgrade'
alias dnfr='sudo dnf remove'
